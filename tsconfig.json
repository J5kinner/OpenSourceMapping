{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build/",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src/index.tsx"
  ]
}
